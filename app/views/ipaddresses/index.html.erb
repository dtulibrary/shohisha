<h1>Listing ipaddresses</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Ipaddress</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ipaddresses.each do |ip| %>
  <tr>
    <td><%= ip.provider.description %></td>
    <td><%= ip.address %></td>
    <td><%= link_to 'Show', ip %></td>
    <td><%= link_to 'Edit', edit_ipaddress_path(ip) %></td>
    <td><%= link_to 'Destroy', ip, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

