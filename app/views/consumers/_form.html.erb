<%= form_for(@consumer) do |f| %>
  <% if @consumer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@consumer.errors.count, "error") %> prohibited this consumer from being saved:</h2>

      <ul>
      <% @consumer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <p>Provider</p>
  <%= f.fields_for :consumers_providers do |builder| %>
    <%= render "consumers_provider_fields", :f => builder %>
  <% end %>
  
  <p><%= link_to_add_fields "Add Provider", f, :consumers_providers %></p>
  
  <p>Packages</p>
  <%= f.fields_for :consumers_packages do |builder| %>
    <%= render "consumers_package_fields", :f => builder %>
  <% end %>
  
  <p><%= link_to_add_fields "Add Package", f, :consumers_packages %></p>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
