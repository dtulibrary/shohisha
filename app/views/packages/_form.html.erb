<%= form_for(@package) do |f| %>
  <% if @package.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@package.errors.count, "error") %> prohibited this package from being saved:</h2>

      <ul>
      <% @package.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :provider %><br />
    <%= f.collection_select(:provider_id, Provider.find(:all), :id, :description) %>
  </div>
  <div class="field">
    <%= f.label :code, "Package code" %><br />
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <p>Consumers</p>
  <%= f.fields_for :consumers_packages do |builder| %>
    <%= render "consumers_package_fields", :f => builder %>
  <% end %>
  
  <p><%= link_to_add_fields "Add Consumer", f, :consumers_packages %></p>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
